@model ResetPasswordViewModel
@{
}

<section class="signin-welcome">
    <div class="container signin-container">
        <h2>Reset password</h2>
        <p>Enter a new password and confirm it</p>
    </div>
</section>

<section class="form-section">
    <div class="container signin-container">
        <div class="signin-form">
            <form asp-controller="PasswordRecovery" asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="input-form" />
                    <span asp-validation-for="NewPassword" class="error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="input-form" />
                    <span asp-validation-for="ConfirmPassword" class="error"></span>
                </div>

                <button type="submit" class="btn btn-primary">Reset Password</button>
            </form>
        </div>
    </div>
</section>
<script defer src="~/js/validation.js"></script>