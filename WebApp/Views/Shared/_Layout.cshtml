<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" /> 
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme-default.css" asp-append-version="true" />
</head>
<body class="page-wrapper">

    @await Html.PartialAsync("Partials/Header")

    <main role="main">
        @RenderBody()
    </main>

    @await Html.PartialAsync("Partials/Footer")
    @await Html.PartialAsync("Toast/_ToastMessages")

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toast-config.js" asp-append-version="true"></script>
    <script src="~/js/products.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
