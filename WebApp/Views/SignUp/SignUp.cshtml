@model SignUpViewModel
<section class="signUp">
    <div class="container">
        <h2>Sign Up</h2>
        <p>Create a new account</p>
        <form method="post" asp-controller="SignUp" asp-action="SignUp" novalidate>
            <div class="signup-form">
                <div class="form-content">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName"/>
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-content">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-content password-wrapper">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" id="password" />
                    <button type="button" class="password-toggle" onclick="togglePassword('password', this)"> <i class="fas fa-eye"></i></button>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-content password-wrapper">
                    <label asp-for="ConfirmPassword"></label>
                    <input type="password" asp-for="ConfirmPassword" id="confirmPassword" />
                    <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword', this)">
                        <i class="fas fa-eye"></i>
                    </button>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-checkbox">
                    <input asp-for="TermsAndConditions" />
                    <label asp-for=TermsAndConditions>By creating an account you accept our <a asp-controller="About" asp-action="Terms">Terms</a> & <a asp-controller="About" asp-action="Conditions">Conditions</a>.</label>
                </div>
                <button class="btn-dark" type="submit">Sign up</button>
            </div>
        </form>
        <p>Already have an account? <a href="/SignUp.html">Sign in here</a></p>
    </div>
</section>

<script>
    function togglePassword(fieldId, button) {
        const passwordField = document.getElementById(fieldId);
        const icon = button.querySelector("i");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            passwordField.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    }
</script>