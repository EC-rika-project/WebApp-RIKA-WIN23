@model WebApp.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "Sign in to your Account";
}


<section class="signin-welcome">
    <div class="container">
        <h2>Welcome!</h2>
        <p>Please login or sign up</p>
    </div>

</section>

<section class="form-section">
    <div class="container">
        <div class="signin-form">
            <form asp-action="SignIn" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="input-form" />
                    <span asp-validation-for="Email" class="error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="input-form" />
                    <span asp-validation-for="Password" class="error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="RememberMe" type="checkbox" id="Rememberme" />
                    <label asp-for="RememberMe">Remember me?</label>
                    <a asp-controller="" asp-action="">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary">Sign In </button>

            </form>
        </div>

        <div class="external-signin">
            <a href="#" class="btn btn-facebook ">Continue with Facebook</a>
            <a href="#" class="btn btn-google">Continue with Google</a>
            <a href="#" class="btn btn-X">Continue with X</a>
        </div>
        <div class="signin-no-account">
        </div>
    </div>
</section>
