@model WebApp.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "Sign in to your Account";
}

<section class="signin-welcome">
    <div class="container signin-container">
        <h2>Welcome!</h2>
        <p>Please login or sign up</p>
    </div>
</section>

<section class="form-section">
    <div class="container signin-container">
        <div class="signin-form">
            <form asp-controller="SignIn" asp-action="SignIn" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="input-form" />
                    <span asp-validation-for="Email" class="error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="input-form" />
                    <span asp-validation-for="Password" class="error"></span>
                </div>

                <div class="form-group remember-me-forgot">
                    <input asp-for="RememberMe" type="checkbox" id="Rememberme" />
                    <label asp-for="RememberMe">Remember me</label>
                    <a asp-controller="PasswordRecovery" asp-action="ForgotPassword">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>

        <div class="separator">
            <span>or</span>
        </div>

        <!--Fontawesome pls-->
        <div class="external-signin">
            <a asp-controller="SignIn" asp-action="FacebookSignIn" class="btn btn-facebook">
                Continue with Facebook
            </a>
            <a asp-controller="SignIn" asp-action="GoogleSignIn" class="btn btn-google">
                Continue with Google
            </a>
            <a href="#" class="btn btn-X">Continue with X</a>
        </div>
    </div>
</section>

<div class="signin-no-account">
    <p>No account yet? Sign up <a asp-controller="Signup" asp-action="signup">here</a></p>
</div>

<script defer src="~/js/validation.js"></script>
